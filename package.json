{
  "name": "github-repo-charts",
  "version": "1.0.0",
  "description": "Github仓库生成指标图表📈",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "./node_modules/.bin/egg-scripts start --env=prod --daemon --title=github-repo-charts",
    "stop": "./node_modules/.bin/egg-scripts stop --title=github-repo-charts",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test-local": "./node_modules/.bin/egg-bin test",
    "test": "npm run lint && npm run test-local",
    "cov": "./node_modules/.bin/egg-bin cov",
    "tsc": "./node_modules/.bin/ets && ./node_modules/.bin/tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "./node_modules/.bin/eslint . --ext .ts --fix",
    "clean": "ets clean",
    "init:cz": "commitizen init cz-conventional-changelog --save --save-exact",
    "commit": "git add . && git-cz"
  },
  "dependencies": {
    "@types/joi": "^14.3.4",
    "crypto-js": "^4.0.0",
    "dayjs": "^1.8.23",
    "egg": "^2.6.1",
    "egg-cors": "^2.2.3",
    "egg-joi": "^1.0.7",
    "egg-jwt": "^3.1.7",
    "egg-scripts": "^2.6.0",
    "joi": "^14.3.1",
    "log4js": "^6.1.2",
    "octonode": "^0.9.5"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "egg-bin": "^4.11.0",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "eslint": "^6.7.2",
    "eslint-config-egg": "^8.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "reflect-metadata": "^0.1.13",
    "tslib": "^1.11.1",
    "typescript": "^3.0.0",
    "validate-commit-msg": "^2.14.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "validate-commit-msg"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "author": "YangXin",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
